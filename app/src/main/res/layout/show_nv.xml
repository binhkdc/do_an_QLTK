<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:backgroundTint="#F44336"
    android:orientation="vertical"
    tools:context=".LoginAccount.DangKi">


    <TextView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đăng Kí"
        android:textSize="30dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/img_inf4"
                    app:civ_border_color="#F44336"
                    app:civ_border_width="1dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edHT_NV_Show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person_24"
                    android:hint="Họ Và Tên"
                    android:background="@drawable/custom_input"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:drawablePadding="12dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="Ngày Sinh:" />

                    <TextView
                        android:id="@+id/txtNS_NV_Show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="" />

                    <Button
                        android:id="@+id/btnChonNS_NV_Show"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:backgroundTint="#FAFAFA"
                        app:icon="@drawable/btn_date_img"
                        app:iconSize="36dp"
                        app:iconTint="#F44336" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Giới Tính:"
                        android:layout_weight="3"/>

                    <TextView
                        android:id="@+id/txtGT_NV_Show"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:layout_weight="3"/>

                    <Button
                        android:id="@+id/btnGT_NV_Nam_Show"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#FAFAFA"
                        android:textSize="10dp"
                        app:icon="@drawable/outline_male_black_20"
                        app:iconTint="#FF5722"
                        android:layout_weight="2"/>


                    <Button
                        android:id="@+id/btnGT_NV_Nu_Show"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#F4F4F4"
                        android:textSize="10dp"
                        app:icon="@drawable/outline_female_black_20"
                        app:iconTint="#FF5722"
                        android:layout_weight="2"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edSDT_NV_Show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone_24"
                    android:hint="Số Điện Thoại"
                    android:background="@drawable/custom_input"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:drawablePadding="12dp"/>

                <EditText
                    android:id="@+id/edDC_NV_Show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_map_24"
                    android:hint="Địa Chỉ"
                    android:background="@drawable/custom_input"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:drawablePadding="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">
                <Button
                    android:id="@+id/btnSuaNV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FD483A"
                    app:icon="@drawable/outline_edit_black_20"
                    app:iconTint="#FFFEFD"
                    android:layout_weight="3"/>
                <Button
                    android:id="@+id/btnXoaNV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:backgroundTint="#FD483A"
                    app:icon="@drawable/outline_delete_black_20"
                    android:layout_weight="3"/>
                <Button
                    android:backgroundTint="#F44336"
                    android:id="@+id/btnHuyShowNV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    app:icon="@android:drawable/btn_dialog"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>