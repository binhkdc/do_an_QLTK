<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doanh Thu"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/doanhthutungay"
            android:text="Từ Ngày: "
            android:textColor="@color/black"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/ed_tungay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ngày/Tháng/Năm"
            android:layout_weight="5"/>

        <ImageView
            android:id="@+id/img_tungay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_date_img"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <TextView
            android:id="@+id/doanhthudenngay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Đến Ngày:"
            android:textColor="@color/black"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/ed_denngay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ngày/Tháng/Năm"
            android:layout_weight="5"/>
        <ImageView
            android:id="@+id/img_denngay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_date_img"
            android:layout_weight="2" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tổng Doanh Thu  "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="145dp" />

    <TextView
        android:id="@+id/tv_hienthikq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="#F80303"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="163dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Xác Nhận"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>